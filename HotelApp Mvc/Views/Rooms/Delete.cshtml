@model HotelApp_Mvc.Models.Dbase.Rooms

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h1>حذف اتاق </h1>

<h3>آیا برای حذف این اتاق مطمئن هستید ؟</h3>
<div>
    <h4>اتاق ها</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType) | نوع اتاق
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomCapacity) | ظرفیت 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomCapacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomPrice) | قیمت
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomAvail) | دسترسی
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomAvail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomsID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت به لیست اتاق ها</a>
    </form>
</div>
