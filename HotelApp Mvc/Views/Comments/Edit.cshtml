@model HotelApp_Mvc.Models.Comments

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Edit</h1>

<h4>نظرات</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentsId" />
            <div class="form-group">
                <label asp-for="NameU" class="control-label"></label>
                <input asp-for="NameU" class="form-control" />
                <span asp-validation-for="NameU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label"></label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserComment" class="control-label"></label>
                <input asp-for="UserComment" class="form-control" />
                <span asp-validation-for="UserComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StarComment" class="control-label"></label>
                <input asp-for="StarComment" class="form-control" />
                <span asp-validation-for="StarComment" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="acceptCom" class="control-label"></label>
                <input asp-for="acceptCom" class="form-control" />
                <span asp-validation-for="acceptCom" class="text-danger"></span>
            </div>*@
            <div class="form-group form-check py-1">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="acceptCom" />
                     تایید نظر
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
