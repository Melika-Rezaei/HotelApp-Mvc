@model IEnumerable<HotelApp_Mvc.Models.Dbase.Users>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserFName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserLName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserFName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserLName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UsersID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UsersID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UsersID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
