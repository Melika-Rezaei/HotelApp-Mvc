@page
@model HotelApp_Mvc.Views.Payment.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.PaymentID" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Payment.PayStatus" /> @Html.DisplayNameFor(model => model.Payment.PayStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Payment.PayCode" class="control-label"></label>
                <input asp-for="Payment.PayCode" class="form-control" />
                <span asp-validation-for="Payment.PayCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.PayDate" class="control-label"></label>
                <input asp-for="Payment.PayDate" class="form-control" />
                <span asp-validation-for="Payment.PayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.reserveId" class="control-label"></label>
                <select asp-for="Payment.reserveId" class="form-control" asp-items="ViewBag.reserveId"></select>
                <span asp-validation-for="Payment.reserveId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
