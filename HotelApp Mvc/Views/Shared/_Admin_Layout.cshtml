<!DOCTYPE html>

<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.rtl.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="~/css/AdminCss/sidebars.css" rel="stylesheet">
    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/sidebars/">
    <link rel="stylesheet" href="~/css/AdminCss/Sidebar1.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <div class="container row ">
        <div class="p-3 m-1 text-bg-dark col-3 navbar-nav rounded " style="height: 700px;">
            <a href="/" class="text-center d-flex align-items-center mb-3 mb-md-0 text-white text-decoration-none">
                <i class="bi bi-building mx-2 fs-4"></i>
                <span class="text-center fs-4">هتل ساحل</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item my-1 fs-5">
                    <a href="#" class="nav-link nav-link2 text-white" aria-current="page">
                        <i class="bi bi-columns-gap ms-1"></i>
                        صفحه اصلی
                    </a>
                </li>
                <li class="text-end nav-item my-1">
                    <a href="#" class="text-end nav-link nav-link2 text-white">
                        <i class="bi bi-bar-chart ms-1"></i>
                        داشبورد
                    </a>
                </li>
                <li class="text-end my-1">
                    <a href="#" class="nav-link nav-link2 text-white text-decoration-none">
                        <i class="bi bi-calendar-week ms-1"></i>
                        لیست رزروها
                    </a>
                </li>
                <li class="text-end my-1 fs-6">
                    <a href="#" class="nav-link nav-link2 text-white">
                        <i class="bi bi-cash-coin ms-1"></i>
                        لیست پرداخت ها
                    </a>
                </li>
                <li class="text-end my-1 fs-6">
                    <a href="#" class="nav-link nav-link2 text-white">
                        <i class="bi bi-people-fill ms-1"></i>
                        اسامی مشتریان
                    </a>
                </li>
                <li class="text-end my-1 fs-6">
                    <a asp-controller="Rooms" asp-action="Index" class="nav-link nav-link2 text-white">
                        <i class="bi bi-house ms-1"></i>
                        لیست اتاق ها
                    </a>
                </li>
                <li class="text-end my-1 fs-6">
                    <a asp-controller="Discounts" asp-action="Index" class="nav-link nav-link2 text-white">
                        <i class="bi bi-gift ms-1"></i>
                        <!-- <i class="bi bi-emoji-smile ms-1"></i> -->
                        کدهای تخفیف
                    </a>
                </li>
                <li class="text-end my-1 fs-6">
                    <a asp-controller="Comments" asp-action="Index" class="nav-link nav-link2 text-white">
                        <i class="bi bi-chat-left-dots ms-1"></i>
                        نظرات
                    </a>
                </li>
                <!-- <li>
                  <a href="#" class="nav-link nav-link2 text-white">
                    <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                    لیست مشتریان
                  </a>
                </li> -->

            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex text-center align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <!-- <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle ms-2"> -->
                    <i class="bi bi-person-circle py-1 px-2"></i>
                    <strong>اسم ادمین</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow text-center">
                    <!-- <li><a class="dropdown-item" href="#">New project...</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li> -->
                    <li><a class="dropdown-item" href="#"> <i class="bi bi-box-arrow-right"></i> خروج از اکانت </a></li>
                </ul>
            </div>
        </div>

        @*changes*@
        <div class="col-9 col-md-8">
            <div class="container">
                <div class="pt-5 justify-content-center align-items-center">
                   
                    @RenderBody()


                </div>
                @RenderSection("Scripts", required: false)
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <Script src="~/js/sidebars.js"></Script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
 
@*    <div class="col-md-7">
        @RenderBody()
    </div>*@

</body>
</html>
